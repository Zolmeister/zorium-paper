@require 'nib'

json('../../vars.json')

@keyframes z-ripple-animation
  from
    transform: scale(1)
    opacity: 0.25
  to
    transform: scale(100)
    opacity: 0

@keyframes z-ripple-animation-small
  from
    transform: scale(1)
    opacity: 0.5
  to
    transform: scale(4)
    opacity: 0

.z-ripple
  position: absolute
  border-radius: 50%
  width: 10px
  height: 10px
  background: $white
  animation: z-ripple-animation 1.5s

  &.small
    animation: z-ripple-animation-small 1.0s
